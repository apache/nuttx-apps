	bool "Enable run-time version information."
	default y

config MBEDTLS_X509_USE_C
	bool "Enable X.509 core for using certificates."
	depends on MBEDTLS_ASN1_PARSE_C && MBEDTLS_OID_C && MBEDTLS_PK_PARSE_C &&\
