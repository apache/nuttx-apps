menuconfig TESTING_MONKEY
	tristate "Monkey test"
	select UINPUT_TOUCH
	select UINPUT_BUTTONS
	default n

if TESTING_MONKEY

config TESTING_MONKEY_PRIORITY
	int "Task priority"
	default 110

config TESTING_MONKEY_STACKSIZE
	int "Stack size"
	default 4096

config TESTING_MONKEY_REC_DIR_PATH
	string "Recorder directory path"
	default "/data/monkey"

endif
