#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config TESTS_SYSCALL
	tristate "vela syscall test"
	default n
	---help---
		Enable syscall test for the vela

if TESTS_SYSCALL

config TESTS_SYSCALL_PRIORITY
	int "Syscall task priority"
	default 99

config TESTS_SYSCALL_STACKSIZE
	int "Syscall stack size"
	default 16384
	
config TESTS_SYSCALL_MOUNT_DIR
	string "Mount directory for the CM_SYSCALL_TEST"
	default "/data"

config CM_SYSCALL_TEST
    bool "enbale syscall test"
    default n
    depends on TESTING_CMOCKA

endif # TESTS_SYSCALL
